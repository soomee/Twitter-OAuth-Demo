<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  android:orientation="vertical"
			  android:layout_width="fill_parent"
			  android:layout_height="fill_parent"
			  android:weightSum="1">
    <android.webkit.WebView android:id="@+id/loginOAuthWebView" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_weight="0.9"></android.webkit.WebView>
    <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:weightSum="1" android:layout_weight="0.1">
        <EditText android:layout_height="fill_parent" android:id="@+id/loginPINText" android:layout_width="fill_parent" android:layout_weight="0.75" android:hint="PIN 코드를 입력하세요"></EditText>
        <Button android:id="@+id/loginOKButton" android:layout_height="fill_parent" android:text="OK" android:layout_width="100dp" android:layout_weight="0.25"></Button>
    </LinearLayout>
</LinearLayout>
